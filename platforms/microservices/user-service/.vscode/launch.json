{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Application (Nodemon)",
      "skipFiles": [ "<node_internals>/**" ],
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/dist/microservices/user-service/src/app.js",
      "outFiles": [
        "${workspaceFolder}/dist/microservices/user-service/src/**/*.js",
        "${workspaceFolder}/../../services/data-access-layer/dist/**/*.js",
        "${workspaceFolder}/../../services/base-classes/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/../../services/data-access-layer/**",
        "${workspaceFolder}/../../services/base-classes/**",
        "!**/node_modules/**"
      ],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "cwd": "${workspaceFolder}",
      "args": [
        "--watch",
        "${workspaceFolder}/dist",
        "--ext",
        "js",
        "--delay",
        "1"
      ]
    }
  ]
}