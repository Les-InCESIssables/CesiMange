{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Application",
      "skipFiles": [ "<node_internals>/**" ],
      "program": "${workspaceFolder}/dist/user-service/app.js",
      "outFiles": [
        "${workspaceFolder}/dist/user-service/**/*.js",
        "${workspaceFolder}/../data-access-layer/dist/**/*.js",
        "${workspaceFolder}/../base-classes/dist/**/*.js"
      ],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/../data-access-layer/**",
        "${workspaceFolder}/../base-classes/**",
        "!**/node_modules/**"
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "console": "externalTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}